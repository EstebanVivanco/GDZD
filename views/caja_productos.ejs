        <script>

            const arreglo = []

            $(document).ready(function() {
            // Asignar evento click al botón con la clase "btn-obtener-datos"
            $('.btn-obtener-datos').on('click', function() {
                // Obtener la fila actual
                const fila = $(this).closest('tr');
                
                // Obtener los datos de la columna deseada
                const nombre = fila.find('td:eq(1)').text();
                const precio = parseFloat(fila.find('td:eq(3)').text());
                
                // Crear elementos para mostrar los datos y el input
                const divDatos = $('<div>').text('Nombre: ' + nombre + ', Precio: $' + precio.toFixed(2));
                const inputCantidad = $('<input>').attr('type', 'number').val(1);
                
                // Agregar evento input al inputCantidad para actualizar el precio
                inputCantidad.on('input', function() {
                const cantidad = parseInt($(this).val());
                const precioTotal = (precio * cantidad).toFixed(2);
                divDatos.text('Nombre: ' + nombre + ', Precio: $' + precioTotal);
                
            });
            
                
                console.log('arreglo :>> ', arreglo);

                // Agregar los elementos al div deseado
                $('#detalle').append(divDatos, inputCantidad);
            });
            });


        </script>

