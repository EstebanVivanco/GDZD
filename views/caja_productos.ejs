<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Aerobulla - Comercio</title>
        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
        <!-- Font Awesome icons (free version)-->
        <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
        <!-- Google fonts-->
        <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
        <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="/estilo_tienda.css" rel="stylesheet" />
    </head>
    <body id="page-top">
        <!-- Navigation-->

        <% tienda.forEach((tienda) => { %>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
            <div class="container">
                <a class="navbar-brand" href="#page-top"><img src="/uploads/<%= tienda.logo_tienda %>" alt="..." /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    Menu
                    <i class="fas fa-bars ms-1"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav text-uppercase ms-auto py-4 py-lg-0">
                        <li class="nav-item"><a class="nav-link" href="#services">Servicios</a></li>
                        <li class="nav-item"><a class="nav-link" href="#portfolio">Productos</a></li>
                        <li class="nav-item"><a class="nav-link" href="/productos">Volver</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Masthead-->
        <header class="masthead" style="background-image: url('/uploads/<%= tienda.banner_tienda %>');">
            <div class="container">
                <div class="masthead-subheading">Bienvenido a!</div>
                <div class="masthead-heading text-uppercase"><%= tienda.nombre_tienda %></div>
                <a class="btn btn-primary btn-xl text-uppercase text-black" href="#services"><%= tienda.slogan_tienda %></a>
            </div>
        </header>

                <!-- Contact-->
                <section class="page-section" id="contact">
                    <div class="container">
                        <div class="text-center">
                            <h2 class="section-heading text-uppercase">Caja de ventas</h2>
                            <h3 class="section-subheading text-muted">Seleccione los productos que esta comprando el cliente.</h3>
                        </div>
                        <!-- * * * * * * * * * * * * * * *-->
                        <!-- * * SB Forms Contact Form * *-->
                        <!-- * * * * * * * * * * * * * * *-->
                        <!-- This form is pre-integrated with SB Forms.-->
                        <!-- To make this form functional, sign up at-->
                        <!-- https://startbootstrap.com/solution/contact-forms-->
                        <!-- to get an API token!-->
                        <form id="contactForm">
                            <div class="row align-items-stretch mb-5">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <!-- Email address input-->
                                        <input class="form-control" type="text" id="rut" name="rut" placeholder="Rut de cliente *" />
                                    </div>
                                </div>
                                
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <!-- Email address input-->
                                        <select class="form-select form-select-lg mb-3" id="producto" name="producto" aria-label=".form-select-lg example">
                                            <option selected disabled>Seleccione un producto</option>
                                            <% productos.forEach((productos) => { %>
                                            <option value="<%= productos.id_producto %>"><%= productos.nombre_producto %></option>
                                            <% }) %>
                                        </select>
                                        
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <!-- Email address input-->
                                        <input class="form-control" type="number" id="cantidad" name="cantidad" placeholder="Cantidad *" />
                                    </div>
                                </div>
                            </div>

                            <div class="text-end"><input class="btn btn-primary btn-xl text-uppercase" type="button" value="Agregar" onclick="agregarDatos()" type="submit"></div>

                            <ul class="text-white" id="listaDatos"></ul>

                            <!-- Submit Button-->
                            <h2 class="section-heading text-uppercase text-end">Total:</h2>
                            <div class="text-end"><button class="btn btn-primary btn-xl text-uppercase" type="submit">Generar Boleta</button></div>

                        </form>
                    </div>
                </section>

        <% }) %>

        <!-- Footer-->
        <footer class="footer py-4">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-4 text-lg-start">Copyright &copy; Aeropuerto 2023</div>
                    <div class="col-lg-4 my-3 my-lg-0">
                        <a class="btn btn-dark btn-social mx-2" href="#!" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                        <a class="btn btn-dark btn-social mx-2" href="#!" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-dark btn-social mx-2" href="#!" aria-label="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                    <div class="col-lg-4 text-lg-end">
                        <a class="link-dark text-decoration-none me-3" href="#!">Politicas de Privacidad</a>
                        <a class="link-dark text-decoration-none" href="#!">Terminos y Condiciones</a>
                    </div>
                </div>
            </div>
        </footer>
        <!-- Portfolio Modals-->
        <script>
            let datosLista = [];

            function agregarDatos() {
                let rut = document.getElementById('rut').value;
                let producto = document.getElementById('producto').value;
                let cantidad = document.getElementById('cantidad').value;
                
                let datos = {
                    rut: rut,
                    producto: producto,
                    cantidad: cantidad
                };

                datosLista.push(datos);

                let lista = document.getElementById('listaDatos');
                let listItem = document.createElement('li');
                listItem.textContent = JSON.stringify(datos);
                lista.appendChild(listItem);

                document.getElementById('rut').value = '';
                document.getElementById('producto').value = 'Seleccione un producto';
                document.getElementById('cantidad').value = '';

            }

            function mostrarResultados() {
                let resultadosDiv = document.getElementById('resultados');
                resultadosDiv.innerHTML = '';
            
                for (let i = 0; i < datosLista.length; i++) {
                    let datos = datosLista[i];
                    
                    console.log(datos);
                    let div = document.createElement('div');
                    div.textContent = 'RUT: ' + datos.rut + ', Producto: ' + datos.producto + ', Cantidad: ' + datos.cantidad;
                    resultadosDiv.appendChild(div);
                }

            }
        </script>


        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="/scripts_tienda.js"></script>
        <!-- * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *-->
        <!-- * *                               SB Forms JS                               * *-->
        <!-- * * Activate your form at https://startbootstrap.com/solution/contact-forms * *-->
        <!-- * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *-->
        <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
    </body>
</html>
