    <div class="container mt-4">
        <h1 class="text-center"> PRODUCTOS REGISTRADOS </h1>
    </div>
    

    <div class="container-fluid">
      <a title="Lista los productos eliminados" data-bs-toggle="tooltip" href="/ver_productosDes/<%= user.id_tienda %>" class="btn btn-primary btn-md text-uppercase text-black mb-4">Productos Eliminados</a>
        <div class="table-responsive align-middle" >
            <table id="table" class="table table-striped text-center mt-4">
                <thead id="titletable">
                    <tr class="table-primary ">

                        <th>ID </th>
                        <th>NOMBRE</th>
                        <th>STOCK</th>
                        <th>PRECIO</th>
                        <th>ESTADO</th>
                        <th>CATEGORÍA</th>
                        <th>BODEGA</th>
                        <th>PROVEEDORES</th>
                        <th>IMAGEN</th>
                        <th>ACCIONES</th>

                    </tr>
                </thead>
                <tbody >
                    
                    <% results.forEach((producto)=> { %>
                        <tr >
                            
                            <td>
                                <%= producto.id_producto %>
                            </td>
                            <td>
                                <%= producto.nombre_producto %>
                            </td>
                            <td>
                                <%= producto.stock %>
                            </td>
                            <td>
                                <%= producto.precio_producto %>
                            </td>
                            <td>
                                <%= producto.nombre_estado_producto %>
                            </td>

                            <td>
                                <%= producto.nombre_categoria_producto %>
                            </td>
                            <td>
                                <%= producto.id_bodega_fk %>
                            </td>

                            <td>
                                <%= producto.nombre_proveedor %>
                            </td>

                            <td>
                                <img src="/uploads/<%= producto.imagen_producto %>" style="width: 80px; height: 80px;" alt="">
                                
                            </td>

                            <td>
                              <a title="Editar producto" data-bs-toggle="tooltip" href="/editar_producto/<%= producto.id_producto %>" class="btn btn-info"><span class="material-symbols-outlined">border_color</span></a>
                              <a title="Eliminar producto" data-bs-toggle="tooltip" onclick="confirmar(<%= producto.id_producto %>, '<%= producto.nombre_producto %>')" class="btn btn-danger"><span class="material-symbols-outlined">delete</span></a>
                            </td>
                        
                        </tr>

                        <% }) %>
                            <!-- Agrega más filas según tus necesidades -->
                </tbody>
            </table>
        </div>
    </div>

