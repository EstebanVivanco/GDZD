                    </form>
                    <h3 id="t" class="section-subheading text-muted">Todas las tiendas disponibles.</h3>
                </div>
                <div class="row">
                <% tiendas.forEach((tienda)=>{ %>
                    <div class="col-lg-4 col-sm-6 mb-4">
                        <!-- Portfolio item 1-->
                        <div class="portfolio-item mx-4">
                            <a class="portfolio-link" href="/index_tienda/<%=tienda.id_tienda %>">
                              <!--
                              <div class="portfolio-hover">
                                  <div class="portfolio-hover-content"><i class="fas fa-plus fa-3x"></i></div>
                              </div>
                              -->
                              <div class="image-container">
                                <img class="" src="/uploads/img_tiendas/<%= tienda.banner_tienda %>" alt="..." height="225px" width="100%"/>
                                <% if(tienda.id_estado_tienda_fk === 1) {%>
                                    <div class="image-text">
                                      <a class="btn btn-primary btn-xl text-uppercase text-black" href="/index_tienda/<%=tienda.id_tienda %>"><%= tienda.nombre_estado_tienda %></a>
                                    </div>
                                <%}else{%>
                                    <div class="texto-superpuesto text-center">
                                        <a class="btn btn-danger btn-xl text-uppercase text-black text-center" href="/index_tienda/<%=tienda.id_tienda %>"><%= tienda.nombre_estado_tienda %></a>
                                    </div>
                                <%}%>
                                <div class="row position-absolute top-0 start-100" >
                                    <div class="col-12 text-end">
                                        <% if(tienda.id_estado_tienda_fk === 1) {%>
                                            <a title="Deshabilitar tienda" data-bs-toggl="tooltip" href="/superadmin_eliminar_tienda/<%= tienda.id_tienda  %>" class="btn btn-danger btn-circle translate-middle"><i class="fa-solid fa-xmark text-black text-center"></i></a>
                                        <%}else{%>
                                            <a title="Habilitar tienda" data-bs-toggl="tooltip" href="/superadmin_habilitar_tienda/<%= tienda.id_tienda  %>" class="btn btn-success btn-circle translate-middle"><i class="fa-solid fa-trash-can-arrow-up text-center "></i></a>
                                        <%}%>
                                    </div>
                                    <div class="col-12 text-end pt-1">
                                        <a title="Editar tienda" data-bs-toggl="tooltip" data-bs-toggle="modal" href="#portfolioModal-<%= tienda.id_tienda %>"  class="btn btn-primary btn-circle translate-middle"><i class="fa-solid fa-pen-to-square text-black text-center"></i></a>
                                    </div>
                                </div>
                              </div>
                            </a>
                            <div class="portfolio-caption">
                              <div class="portfolio-caption-heading"><%= tienda.nombre_tienda %></div>
                              <div class="portfolio-caption-subheading text-muted fs-5"><%= tienda.horarios_tienda %></div>
                            </div>
                          </div>
                    </div>
                    <div class="portfolio-modal modal fade" id="portfolioModal-<%= tienda.id_tienda %>" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="close-modal" data-bs-dismiss="modal"><i class='bx bx-x-circle fs-1'></i></div>
                                <div class="container-fluid px-1 py-5 mx-auto">
                                    <div class="row d-flex justify-content-center">
                                        <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
                                            <div>
                                                <h2  class="text-center mb-4">Edicion de Tienda</h2>
                                                <form class="form-card" action="/editestore" method="POST" enctype="multipart/form-data">
                                                    <input type="hidden" name="formType" value="tienda">
                                                    <input hidden type="text" name="id" id="id" value="<%= tienda.id_tienda %>">

                                                    <input hidden type="text" name="id" id="id" value="<%= tienda.id_tienda %>">
                                                    <div class="row justify-content-between text-left">
                                                        <div class="form-group col-sm-6 flex-column d-flex"><label class="form-control-label px-3">Nombre</label> <input type="text" id="name" name="name" value="<%= tienda.nombre_tienda %>"> </div>
                                                        <div class="form-group col-sm-6 flex-column d-flex"><label class="form-control-label px-3">Slogan</label> <input type="text" id="slogan" name="slogan" value="<%= tienda.slogan_tienda %>"> </div>
                                                    </div>
                                                    <div class="row justify-content-between text-left">
                                                        <div class="form-group col-sm-6 flex-column d-flex"><label class="form-control-label px-3">Logo</label> <input class="form-control" type="file" id="logo" name="logo" value="<%= tienda.logo_tienda %>"></div>
                                                        
                                                        <div class="form-group col-sm-6 flex-column d-flex"><label class="form-control-label px-3">Banner</label> <input class="form-control" type="file" id="image" name="image" value="<%= tienda.banner_tienda %>"></div>
                                                    </div>
                                                    <div class="row justify-content-between text-left">
                                                        <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3">Tipo de tienda</label>
                                                            <select class="form-control mt-2 py-2" id="tipo" name="tipo">
                                                                <% tipo_tiendas.forEach((tipo) => { %>
                                                                    <option value=" <%= tipo.id_tipo %>"> <%= tipo.nombre_tipo %></option>
                                                                <% }) %>
                                                            </select>
                                                        </div>
                                                        <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3">Sector</label>
                                                            <select class="form-control mt-2 py-2" id="sector" name="sector">
                                                                <% sectores.forEach((sector) => { %>
                                                                    <option value=" <%= sector.id_sector %>"> <%= sector.nombre_sector %></option>
                                                                <% }) %>
                                                            </select>
                                                        </div>

                                                    </div>
                                                    <div class="row justify-content-between text-left">
                                                        <div class="form-group col-12 flex-column d-flex"> <label class="form-control-label px-3">Horarios</label> <input type="text" id="descripcion" name="descripcion" value="<%= tienda.horarios_tienda%>"> </div>
                                                        <div class="form-group col-12 flex-column d-flex"> <button type="submit" class="btn btn-primary text-black">Enviar</button> </div>
                                                    </div>  
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                   
                </div>
            </div>
        </section>

        

    


