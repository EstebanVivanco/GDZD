    <%}%>

      <div class="container mt-4">
        <h1 style="text-align: center; "> PRODUCTOS VENDIDOS </h1>
      </div>

      <div class="container-fluid">

        <div class="table-responsive align-middle">
          <table id="table" class="table table-striped text-center mt-4">
            <thead id="titletable">
              <tr class="table-primary ">

                <th class="text-center">ID </th>
                <th class="text-center">CÓDIGO BOLETA</th>
                <th class="text-center">PRODUCTO</th>
                <th class="text-center">CANTIDAD</th>
                <th class="text-center">TOTAL</th>
                <th class="text-center">FECHA</th>


              </tr>
            </thead>
            <tbody>

              <% results.forEach((producto)=> { %>
                <tr>

                  <td>
                    <%= producto.id_venta_tienda %>
                  </td>
                  <td>
                    <%= producto.codigo_boleta %>
                  </td>
                  <td>
                    <%= producto.nombre_producto %>
                  </td>
                  <td>
                    <%= producto.cantidad %>
                  </td>
                  <td>
                    $ <%= producto.total %>
                  </td>

                  <td>
                    <%= producto.fecha_venta %>
                  </td>


                </tr>

                <% }) %>
                  <!-- Agrega más filas según tus necesidades -->
            </tbody>
          </table>
        </div>
      </div>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
