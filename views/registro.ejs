<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Registro de usuario</title>
</head>

<body>

    <div class=" d-flex justify-content-center align-items-center vh-100 mt-2" style="background-color: hsl(0, 0%, 90%); ">
        <div class="bg-white p-5 rounded-5 text-secondary shadow" style="width: 27rem; border-radius: 30px;">
            <form action="/savestore" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate >
                <h3 class="text-center">Registro de Tienda</h3>
        
                <div class="mt-1">        
                <b>Nombre de la tienda</b><br>
                <input type='text' class="form-control" name="name" id="name" placeholder="Ingrese el nombre de la tienda" size='15' maxlength='13' required>
                </div>       
                <br>
                <div class="mt-1">
                    <b>Correo</b>
                    <input type='email' name="correo" id="correo" class="form-control"  placeholder="Ingrese su correo electr칩nico" size='45' maxlength='30' required><br>
                </div>
                <div>
                    <b>Contrase침a</b>
                    <input type='password' name="password" class="form-control" placeholder="Ingrese su contrase침a" required><br>
                </div>
                <div class="mt-1">        
                    <b>Slogan de la tienda</b><br>
                    <input type='text' class="form-control" name="slogan" id="slogan" placeholder="Ingrese el slogan de la tienda" size='15' maxlength='50' required>
                </div>  <br> 

                <div class="mb-3">
                    <b>Ingrese el logo de su tienda</b>
                    <input class="form-control" type="file" id="logo" name="logo" tabindex="7" accept="image/*" required>
                </div> 
                
                <div class="mb-3">
                    <b>Ingrese el banner de su tienda</b>
                    <input class="form-control" type="file" id="image" name="image" tabindex="7" accept="image/*" required>
                </div> 

                <b>Seleccione el tipo de tienda</b>
                <select class="form-select form-control-lg" aria-label="Default select example" id="tipo" name="tipo" required>
                    <% tipotienda.forEach((tipotienda) => { %>
                        <option value="<%= tipotienda.id_tipo %>"><%= tipotienda.nombre_tipo %></option>
                    <% }) %>
                </select><br>
                <b>Seleccione el sector</b>
                <select class="form-select form-control-lg" aria-label="Default select example" id="sector" name="sector" required>
                    <!--
                    <option value="1">A1</option>
                    <option value="2">A2</option>
                    <option value="3">B1</option>
                    <option value="4">B2</option>
                    -->
                    <% sector.forEach((sector) => { %>
                        <option value="<%= sector.id_sector %>"><%= sector.nombre_sector %></option>
                    <% }) %>
                </select>
                <br>
                <button type="submit" class="btn btn-info text-white w-100 fw-semibold shadow-sm"> Registrarme </button>
                <div class="d-flex gap-1 justify-content-center mt-1">
                    <div>Ya tienes una cuenta?</div>
                    <a href="/" class="text-decoration-none text-info fw-semibold">Iniciar Sesi칩n</a>
                </div>
            </form>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <% if(typeof alert !="undefined" ){ %>
        <script>
            Swal.fire({
                title: '<%= alertTitle%>',
                text: '<%= alertMessage%>',
                icon: '<%= alertIcon%>',
                showConfirmButton: <%= showConfirmButton%> ,
                timer: <%= timer %>
            }).then(() => {
                    window.location = '/ <%= ruta%>'
                })
        </script>
        <% } %>
</body>

</html>