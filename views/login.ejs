<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Inicio de sesión</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  </head>
  <body>

    <div class="d-flex justify-content-center align-items-center vh-100" style="background-color: hsl(0, 0%, 90%);">
      <!--comienzo del form-->
      <form action="login" method="post">
      <div class="bg-white p-5 rounded-5 text-secondary shadow" style="width: 25rem; border-radius: 30PX;">
          
          <div class="d-flex justify-content-center">
            <img src="login-icon.svg" alt="login-icon" style="height: 7rem" />
          </div>
          <h6 class="text-center fs-1 fw-bold">Bienvenido</h6>
          <div class="input-group mt-4">
            <div class="input-group-text bg-info">
              <img src="username-icon.svg" alt="username-icon" style="height: 1rem" />
            </div>
            <!--input-->
            <input class="form-control bg-light" type="email" id="email" name="email" placeholder="Correo electrónico" />
          </div>
          <div class="input-group mt-1">
            <div class="input-group-text bg-info">
              <img src="password-icon.svg" alt="password-icon"style="height: 1rem" />
            </div>
            <!--input-->
            <input class="form-control bg-light" type="password" id="password" name="password"  placeholder="Contraseña" />
          </div>

          <button type="submit" class="btn btn-info text-white w-100 mt-4 fw-semibold shadow-sm">
            Ingresar
          </button>
          <div class="d-flex gap-1 justify-content-center mt-4">
            <div>No tienes una cuenta?</div>
            <a href="/registro" class="text-decoration-none text-info fw-semibold">Registrar</a>
          </div>
        </div>
      </form>
      <!--Fin del form-->
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <% if(typeof alert !="undefined" ){ %>
      <script>
          Swal.fire({
              title: '<%= alertTitle%>',
              text: '<%= alertMessage%>',
              icon: '<%= alertIcon%>',
              showConfirmButton: <%= showConfirmButton%> ,
              timer: <%= timer %>
          }).then(() => {
                  window.location = '/<%= ruta%>'
              })
      </script>
  <% } %>
  </body>
</html>