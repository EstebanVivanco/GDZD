<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Productos Deshabilitados</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
  </head>
  <body>

    <%if(user){%>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="">Tienda</a>
                  </li>
    
                  <li class="nav-item">
                    <a class="nav-link" href="/productos">Registrar Producto</a>
                  </li>
    
                  <li class="nav-item">
                    <a class="nav-link" href="/ver_productos/<%= user.id_tienda %>">Ver Productos</a>
                  </li>

                  <li class="nav-item">
                    <a class="nav-link" href="/ver_productosDes/<%= user.id_tienda %>">Ver Productos eliminados</a>
                  </li>
                  
    

                  <li class="nav-item">
                    <a class="nav-link" href="/index_tienda/<%= user.id_tienda %>">Landing</a>
                  </li>


                  
                  <li class="nav-item">
                    <a class="nav-link" href="/logout">Cerrar Sesión</a>
                  </li>


                </ul>
              </div>
            </div>
          </nav>

    <%}%> 

    <div class="container mt-4">
        <h1 style="text-align: center; "> PRODUCTOS DESHABILITADOS </h1>
    </div>

    <div class="container-fluid">

        <div class="table-responsive align-middle" >
            <table id="table" class="table table-striped text-center mt-4">
                <thead id="titletable">
                    <tr class="table-success ">

                        <th>ID </th>
                        <th>NOMBRE</th>
                        <th>STOCK</th>
                        <th>PRECIO</th>
                        <th>ESTADO</th>
                        <th>CATEGORÍA</th>
                        <th>BODEGA</th>
                        <th>PROVEEDORES</th>
                        <th>IMAGEN</th>
                        <th>ACCIONES</th>

                    </tr>
                </thead>
                <tbody >
                    
                    <% results.forEach((producto)=> { %>
                        <tr >
                            
                            <td>
                                <%= producto.id_producto %>
                            </td>
                            <td>
                                <%= producto.nombre_producto %>
                            </td>
                            <td>
                                <%= producto.stock %>
                            </td>
                            <td>
                                <%= producto.precio_producto %>
                            </td>
                            <td>
                                <%= producto.nombre_estado_producto %>
                            </td>

                            <td>
                                <%= producto.nombre_categoria_producto %>
                            </td>
                            <td>
                                <%= producto.id_bodega_fk %>
                            </td>

                            <td>
                                <%= producto.nombre_proveedor %>
                            </td>

                            <td>
                                <img src="/uploads/<%= producto.imagen_producto %>" style="width: 80px; height: 80px;" alt="">
                                
                            </td>

                            <td>
                              <a onclick="confirmar(<%= producto.id_producto %>, '<%= producto.nombre_producto %>')" class="btn btn-info"><span class="material-symbols-outlined">add_task</span></a>
                            </td>
                        
                        </tr>

                        <% }) %>
                            <!-- Agrega más filas según tus necesidades -->
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <!--cdn alertas js-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.5/dist/sweetalert2.all.min.js"></script>
    <script>
      function confirmar(id, nombre) {
          Swal.fire({
              title: 'Atencion!',
              text: "¿Estas seguro de querer habilitar el producto " + nombre + "?",
              icon: 'warning',
              showCancelButton: true,
              confirmButtonColor: '#3085d6',
              cancelButtonColor: '#d33',
              cancelButtonText: 'Cancelar',
              confirmButtonText: 'Si, habilitar!'
          }).then((result) => {

            if (result.isConfirmed) {
                window.location = '/habilitar_producto/' + id;

            }
          })
      }

  </script>
    
</body>
</html>